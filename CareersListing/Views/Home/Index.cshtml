@{
    ViewBag.Title = "Home";
    Layout = "_PublicLayout";
}


<div class="slider-div">
    <div class="container">
        <div class="slider-area pt-4">
            <div class="slider-desc animated3 fadeInLeft">
                <div class="title-wrap"><div class="title"> Your smart choice </div></div>
                <div class="text">
                    CareersListing offers you the best place to find your dream job.
                </div>
                <div>
                    <form class="mt-4 frm-job-search">
                        <div class="input-group selects">
                            <select class="form-control">
                                <option>Job function</option>
                            </select>
                            <select class="form-control">
                                <option>Industry</option>
                            </select>
                            <select class="form-control">
                                <option>Location</option>
                            </select>
                        </div>
                        <div class="input-group mt-1">
                            <button class="btn btn-primary search-btn" style="font-size:20px; width:100%;">
                                <i class="fa fa-search"></i> &nbsp; Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <img src="~/images/slider/img1.png" class="active animated3 fadeInUp " />

        </div>
    </div>
</div>
@section Scripts {
    <script src="~/dist/js/HomeJS.js"></script>
}