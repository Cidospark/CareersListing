@model List<ClaimsUsersViewModel>
@{
    ViewBag.Title = "Manage Claims Users";
    Layout = "_AdminLayout";
    var count = 0;
}

<div class="row">

    <!-- left column -->
    <div class="col-sm-12">
        <!-- general form elements -->
        <div class="card card-primary card-outline p-3">
            <div class="card-header mb-4">
                <h3 class="card-title">
                    <small><b></b> </small>
                </h3>
            </div>

            <div class="row ml-4 mt-4">
                
                <div class="mr-5 col-md-5">
                    <p class="text-danger"><b>Add or remove users from [@ViewBag.ClaimType Claim]</b></p>
                    <form method="post">
                        <div style="max-height:400px; overflow-y:auto; padding-right:20px;">
                            <table class="table table-striped border">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td class="p-3">
                                            <div class="form-check">
                                                <input type="hidden" asp-for="@Model[i].UserId" />
                                                <input type="hidden" asp-for="@Model[i].UserName" />
                                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                                <label asp-for="@Model[i].IsSelected">
                                                    @Model[i].UserName
                                                </label>
                                            </div>
                                            <div asp-validation-summary="ModelOnly"></div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <br />
                        <div>
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a asp-action="ClaimsList" asp-controller="Administration" class="btn btn-danger">Cancel</a>
                        </div>
                        <br /><br />
                    </form>
                </div>
                
                <div class=" col-md-6" style="height:100%;">
                    <p class="text-primary"><b>List of users assigned to [@ViewBag.ClaimType Claim]</b></p>

                    <div style="max-height:400px; overflow-y:auto; padding-right:20px;">
                        <table class="table table" style="">

                            @if (Model.Count > 0)
                            {
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    if (Model[i].IsSelected == true)
                                    {
                                        count += 1;
                                        <tr>
                                            <td style="padding-left:0px;">
                                                <div class="form-check p-2">
                                                    <i class="fa fa-star"></i> &nbsp; @Model[i].UserName
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                }
                                @if (count < 1)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check p-2">
                                                No users found.
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <div class="form-check p-2">
                                            No users found.
                                        </div>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                    <a asp-action="ClaimsList" asp-controller="Administration" class="btn btn-danger">Back</a>
                </div>
            </div>
        </div>
        <!-- /.card -->

    </div>
    <!-- /.content-wrapper -->

</div>


