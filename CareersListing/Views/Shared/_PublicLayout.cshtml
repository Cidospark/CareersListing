<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title  | CareersListing</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">-->
    <!-- AdminLTE css -->
    <link rel="stylesheet" href="~/dist/css/adminlte.css">
    <link rel="stylesheet" href="~/dist/css/generalStyle.css">
    <link rel="stylesheet" href="~/dist/css/animate.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <div>
        <div class="">
            <header>
                <div class="container">
                    <div class="row">
                        <div class="col-6 p-2">
                            <a asp-action="Index" asp-controller="Home" class="sitename"><strong><i class="fa fa-briefcase"></i> Careers</strong>Listing</a>
                        </div>
                        <div class="col-6 p-2">
                            <div class="d-flex justify-content-end">
                                <div class="btn btn-outline-primary mr-2 nav-btn"><i class="fa fa-bars"></i></div>
                                <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary mr-2 login-btn"><i class="fa fa-lock"></i> &nbsp; Login</a>
                                <div><a asp-action="Index" asp-controller="Home" class="btn btn-primary premium">Go Premium</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!--/ Navbar-->
        </div>

        @RenderBody()
    </div>
        @RenderSection("Scripts", required: false)
</body>
</html>
