@model ResetPasswordViewModel
@{
    ViewBag.Title = "Password Reset";
    Layout = "_AccountLayout";
}



<div class="register-box mt-3">
    <div class="card">
        <div class="card-body register-card-body">
            <div class="">
                <a href="#" style="font-size:41px; color:#0056B3;"><strong><i class="fa fa-briefcase"></i> Careers</strong>Listing</a>
                <div class="mb-3 text-center" style="font-size:18px; color:teal;"> - Password Successfully Reset - </div>
            </div>
            <center>
                <i class="fa fa-check-circle text-teal m-3" style="font-size:70px;"></i>
                <p class="text-teal">
                    Your password has been reset, Please click <a asp-action="Login">here to login</a>
                </p>
            </center>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
    <div class="text-muted text-center">
        <small>Copyright &copy; @DateTime.Now.Year <a href="#">CareersListing</a>. All rights reserved.</small>
    </div>
</div>