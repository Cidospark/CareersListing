@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
    Layout = "_AccountLayout";
}


<div class="register-box mt-3" style="width:360px;">
    <div class="card">
        <div class="card-body register-card-body">
            <div class="">
                <a href="#" style="font-size:41px; color:#0056B3;"><strong><i class="fa fa-briefcase"></i> Careers</strong>Listing</a>
                <div class="mb-3 text-center" style="font-size:24px; color:#ccc;"> - Forgot Password? - </div>
            </div><br />


            <form method="post">
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Request new password</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <br />
            <small>
                <a class="text-center">Need an account?  <b><span class="text-navy"> REGISTER</span></b></a> as
                &nbsp;
                <a asp-action="Register" asp-controller="Account" asp-route-accType="applicant">APPLICANT</a> &nbsp; | &nbsp;
                <a asp-action="Register" asp-controller="Account" asp-route-accType="employer">EMPLOYER</a>
            </small>
            <center>
                <p class="mb-0">
                    <small><a asp-action="Login" asp-controller="Account">Already a member? <span class="text-navy"><b>LOGIN</b></span></a></small>
                </p>
            </center>

        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
    <div class="text-white text-center">
        <small>
            Copyright &copy; @DateTime.Now.Year
            <a asp-action="Index" asp-controller="Home" class="text-teal">CareersListing</a>. All rights reserved.
        </small>
    </div>
</div>