@{
    ViewBag.Title = "Confirmation page";
    string resetLink = ViewBag.ResetLink;
    Layout = "_AccountLayout";
}


<div class="register-box mt-3">
    <div class="card">
        <div class="card-body register-card-body">
            <div class="">
                <a href="#" style="font-size:41px; color:#0056B3;"><strong><i class="fa fa-briefcase"></i> Careers</strong>Listing</a>
                <div class="mb-3 text-center" style="font-size:22px; color:#ccc;"> - Password Change Confrimation - </div>
            </div>

            <center>
                <p class="mt-5">
                    <small class="text-danger">If you haven't confirmed your account yet, you might not get the link.</small>
                </p>
            </center>
            <center>
                <p class="mt-5">
                    You should recieve a confirmation link logged to your machine. Use link to redirect to password reset page.
                </p>
            </center>

            <br />

            <small>
                <a class="text-center">Need an account?  <b><span class="text-navy"> REGISTER</span></b></a> as
                &nbsp;
                <a asp-action="Register" asp-controller="Account" asp-route-accType="applicant">APPLICANT</a> &nbsp; | &nbsp;
                <a asp-action="Register" asp-controller="Account" asp-route-accType="employer">EMPLOYER</a>
            </small>
            <center>
                <p class="mb-0">
                    <small><a asp-action="Login" asp-controller="Account">Already a member? <span class="text-navy"><b>LOGIN</b></span></a></small>
                </p>
            </center>

        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
    <div class="text-white text-center">
        <small>
            Copyright &copy; @DateTime.Now.Year
            <a asp-action="Index" asp-controller="Home" class="text-teal">CareersListing</a>. All rights reserved.
        </small>
    </div>
</div>