@{
    ViewBag.Title = "Confirmation page";
    string resetLink = ViewBag.ResetLink;
    Layout = "_AccountLayout";
}


<div class="register-box mt-3">
    <div class="card">
        <div class="card-body register-card-body">
            <div class="">
                <a href="#" style="font-size:41px; color:#0056B3;"><strong><i class="fa fa-briefcase"></i> Careers</strong>Listing</a>
                <div class="mb-3 text-center" style="font-size:22px; color:#ccc;"> - Password Change Confrimation - </div>
            </div>

            <center>
                <p class="mt-5">
                    If you have an account with us,  <a href="@resetLink">click this link</a> to continue with this process
                </p>
            </center>

            <br />
            <small><a class="text-center">Don't have an account yet? <b><span class="text-navy"> REGISTER</span></b></a> as</small>
            <center>
                <p class="mb-1">
                    <div class="text-center">
                        <a asp-action="Register" asp-controller="Account" asp-route-accType="applicant">APPLICANT</a> &nbsp; | &nbsp;
                        <a asp-action="Register" asp-controller="Account" asp-route-accType="employer">EMPLOYER</a>
                    </div>
                </p>
                <p class="mb-0">
                    <small><a asp-action="Login" asp-controller="Account">Already a member? <span class="text-navy"><b>LOGIN</b></span></a></small>
                </p>
            </center>

        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
    <div class="text-muted text-center">
        <small>Copyright &copy; @DateTime.Now.Year <a href="#">CareersListing</a>. All rights reserved.</small>
    </div>
</div>